<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobDetailsActivity">

    <TextView
        android:id="@+id/JobTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Title "
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="29dp" />

    <TextView
        android:id="@+id/CompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Name"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="58dp" />

    <Button
        android:id="@+id/JobURL"
        android:layout_width="243dp"
        android:layout_height="34dp"
        android:text="Link"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="124dp" />

    <TextView
        android:id="@+id/RequiredSkill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Required Skills:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="182dp" />

    <Button
        android:id="@+id/Skill1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skill 1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="223dp" />

    <Button
        android:id="@+id/Skill2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skill 2"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="223dp" />

    <TextView
        android:id="@+id/AreaOfInterest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Areas of Interest:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="296dp" />

    <Button
        android:id="@+id/Interest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interest 2"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="341dp" />

    <Button
        android:id="@+id/Interest1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interest 1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="341dp" />

    <TextView
        android:id="@+id/JobDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Description:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="508dp" />

    <EditText
        android:id="@+id/JDText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="550dp" />

    <Button
        android:id="@+id/Apply"
        android:layout_width="179dp"
        android:layout_height="87dp"
        android:text="Apply"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="628dp" />

    <Button
        android:id="@+id/SaveJob"
        android:layout_width="167dp"
        android:layout_height="86dp"
        android:text="SAVE JOB"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="628dp" />

    <Button
        android:id="@+id/BackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="close"
        tools:layout_editor_absoluteX="307dp" />

    <TextView
        android:id="@+id/RecommendedCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommended Courses:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="411dp" />

    <Button
        android:id="@+id/Course1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course2"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="444dp" />

    <Button
        android:id="@+id/Course2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course2"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="444dp" />

    <TextView
        android:id="@+id/DatePosted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Posted"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="87dp" />

    <ImageButton
        android:id="@+id/JobImage"
        android:layout_width="84dp"
        android:layout_height="85dp"
        android:src="@drawable/job_img"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="29dp" />

</androidx.constraintlayout.widget.ConstraintLayout>