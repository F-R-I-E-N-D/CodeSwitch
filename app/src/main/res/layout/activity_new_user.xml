<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6CED1"
    tools:context=".CreateAccountActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="291dp"
        android:layout_height="63dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="New User"
        android:textColor="#DC3528"
        android:textSize="24sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="222dp"
        android:layout_height="42dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="30dp"
        android:background="#FFFFFF"
        android:capitalize="characters"
        android:gravity="center"
        android:text="Email"
        android:textColor="#AE2E25"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/email_login_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="222dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="21dp"
        android:background="#FFFFFF"
        android:capitalize="characters"
        android:gravity="center"
        android:text="Password"
        android:textColor="#BC3329"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/password_login_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_login_input"
        app:layout_constraintVertical_bias="0.685" />

    <EditText
        android:id="@+id/email_login_input"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:background="#E4E6EC"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/password_login_input"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginBottom="368dp"
        android:background="#E4E6EC"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPassword"
        android:onClick="onRegister"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/password_login_input2"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="20dp"
        android:background="#E4E6EC"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPassword"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="222dp"
        android:layout_height="42dp"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="40dp"
        android:background="#FFFFFF"
        android:capitalize="characters"
        android:gravity="center"
        android:text="Confirm Password"
        android:textColor="#F44336"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_login_input" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="137dp"
        android:onClick="onRegisterNewClick"
        android:text="NEW USER"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_login_input2"
        tools:text="NEW USER" />

</androidx.constraintlayout.widget.ConstraintLayout>